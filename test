var playerJumpLimit = 250;
var player = createSprite(200, 350);
player.setAnimation("playerIdle");
player.scale = 0.3;
function draw() {
  background("white");
  if (keyDown("right")) {
    player.mirrorX(1);
    player.setAnimation("playerWalk");
    player.velocityX = 10;
  } else if (keyDown("left")) {
    player.mirrorX(-1);
    player.setAnimation("playerWalk");
    player.velocityX = -10;
  } else {
    player.setAnimation("playerIdle");
    player.velocityX = 0;
  }
  if (keyDown("up") && player.y === 350) {
    player.velocityY = -10;
  } else if ((keyWentUp("up")) && player.y < 350) {
    player.velocityY = 5;
  } else if ((player.y <= playerJumpLimit)) {
    player.velocityY = 5;
  } else if ((player.y) >= 350) {
    player.velocityY = 0;
  }
  if (player.x === -10) {
    player.x = 400;
  } else if (player.x === 410) {
    player.x = 0;
  }
  player.debug = true;
  drawSprites();
}
